{
    "/api/animes/": {
        "get": {
            "description": "Get animes by filter",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "query",
                    "name": "quality",
                    "description": "Anime quality to filter",
                    "type": "number"
                },
                {
                    "in": "query",
                    "name": "year",
                    "description": "Anime year to filter",
                    "type": "number"
                },
                {
                    "in": "query",
                    "name": "categories",
                    "description": "Anime categories to filter (separated with ,)",
                    "type": "string"
                },
                {
                    "in": "query",
                    "name": "rating",
                    "description": "Anime rating to filter",
                    "type": "number"
                },
                {
                    "in": "query",
                    "name": "isSerial",
                    "description": "Anime isSerial to filter",
                    "type": "boolean"
                }
            ],
            "responses": {
                "200": {
                    "description": "OK"
                }
            }
        },
        "post": {
            "description": "Create anime",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "body",
                    "name": "Body",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/AnimeCreate"
                    }
                }
            ],
            "responses": {
                "201": {
                    "description": "OK"
                }
            }
        }
    },
    "/api/animes/card": {
        "get": {
            "description": "Get card stack animes",
            "tags": ["Animes"],
            "responses": {
                "200": {
                    "description": "OK"
                }
            }
        }
    },
    "/api/animes/{id}": {
        "get": {
            "description": "Get anime by ID",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "path",
                    "name": "id",
                    "description": "Anime ID",
                    "required": true,
                    "type": "string"
                }
            ],
            "responses": {
                "200": {
                    "description": "OK"
                }
            }
        },
        "patch": {
            "description": "Update anime",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "path",
                    "name": "id",
                    "description": "Anime ID",
                    "required": true,
                    "type": "string"
                },
                {
                    "in": "body",
                    "name": "Body",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/AnimeUpdate"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "OK"
                }
            }
        },
        "delete": {
            "description": "Delete anime",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "header",
                    "type": "string",
                    "name": "Authorization",
                    "description": "Token",
                    "required": true
                }
            ],
            "responses": {
                "204": {
                    "description": "OK"
                }
            }
        }
    },
    "/api/animes/{id}/episodes": {
        "get": {
            "description": "Get anime episodes by ID",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "path",
                    "name": "id",
                    "description": "Anime ID",
                    "required": true,
                    "type": "string"
                }
            ],
            "responses": {
                "200": {
                    "description": "OK"
                }
            }
        },
        "post": {
            "description": "Add episode to anime",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "path",
                    "name": "id",
                    "description": "Anime ID",
                    "required": true,
                    "type": "string"
                },
                {
                    "in": "body",
                    "name": "Body",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/AddEpisode"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "OK"
                }
            }
        }
    },
    "/api/animes/{id}/episodes/{episodeId}": {
        "delete": {
            "description": "Delete episode from anime",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "path",
                    "name": "id",
                    "description": "Anime ID",
                    "required": true,
                    "type": "string"
                },
                {
                    "in": "path",
                    "name": "episodeId",
                    "description": "Episode ID",
                    "required": true,
                    "type": "string"
                }
            ],
            "responses": {
                "204": {
                    "description": "OK"
                }
            }
        }
    },
    "/api/animes/search": {
        "get": {
            "description": "Get animes by search",
            "tags": ["Animes"],
            "parameters": [
                {
                    "in": "query",
                    "name": "search",
                    "description": "Anime title to search",
                    "required": true,
                    "type": "string"
                }
            ],
            "responses": {
                "200": {
                    "description": "OK"
                }
            }
        }
    }
}
